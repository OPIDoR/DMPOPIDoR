defaults: &defaults
  adapter: <%= ENV.fetch('DB_ADAPTER', 'postgresql') %>
  encoding: <%= '' %>
  pool: <%= ENV.fetch('DB_POOL_SIZE', 16) %>
  host: <%= ENV.fetch('POSTGRES_HOST', 'postgres') %>
  port: <%= ENV.fetch('POSTGRES_PORT', '5432') %>
  database: <%= ENV.fetch('POSTGRES_DATABASE', 'roadmap') %>
  username: <%= ENV.fetch('POSTGRES_USER', Rails.application.credentials.db_username) %>
  password: <%= ENV.fetch('POSTGRES_PASSWORD', Rails.application.credentials.db_password) %>

production:
  <<: *defaults

development:
  <<: *defaults

test:
  <<: *defaults

build:
  adapter: nulldb
